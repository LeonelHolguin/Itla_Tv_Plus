@model Application.ViewModels.SaveSerieViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>¿Está seguro que desea eliminar esta serie (@Model.SerieName)?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Serie" asp-action="DeletePost">
                    
                    <input type="hidden" asp-for="SerieId" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Serie" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
