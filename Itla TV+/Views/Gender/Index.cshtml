@model List<Application.ViewModels.GenderViewModel>
@{
    ViewData["Title"] = "Genders";
}

<h1>Mantenimiento géneros</h1>

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-3 offset-9">
            <a asp-controller="Gender" asp-action="Create" class="btn btn-success">Nuevo género</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay nada para mostrar</h2>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-light">
                            <h4>@item.GenderName</h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Gender" asp-action="Edit" asp-route-id="@item.GenderId" class="btn btn-info">Editar</a>
                                    <a asp-controller="Gender" asp-action="Delete" asp-route-id="@item.GenderId" class="btn btn-danger">Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }


    </div>

</div>