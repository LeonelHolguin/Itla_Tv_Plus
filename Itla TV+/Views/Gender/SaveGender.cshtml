@model Application.ViewModels.GenderViewModel
@{
    bool editMode = Model.GenderId == 0 ? false : true;
    ViewData["Title"] = "Save";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-opacity-50 bg-success text-black">
                    <h4>@(editMode ? $"Editando el género: {Model.GenderName}" : "Creando nuevo género")</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Gender" asp-action="@(editMode ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="GenderName" class="form-label">Nombre del género</label>
                            <input asp-for="GenderName" type="text" class="form-control" placeholder="Ciencia ficción, Aventura..." />
                            <span asp-validation-for="GenderName" class="text-danger"></span>
                        </div>


                        <input type="hidden" asp-for="GenderId" />

                        <button class="btn btn-primary" type="submit">Guardar</button>
                        <a class="btn btn-warning" asp-controller="Gender" asp-action="Index">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>