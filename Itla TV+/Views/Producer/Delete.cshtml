@model Application.ViewModels.ProducerViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4> ¿Está seguro que desea eliminar esta productora (@Model.ProducerName)?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Producer" asp-action="DeletePost">

                    <input type="hidden" asp-for="ProducerId" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Producer" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>