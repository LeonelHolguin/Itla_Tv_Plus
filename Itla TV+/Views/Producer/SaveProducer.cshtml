@model Application.ViewModels.ProducerViewModel
@{
    bool editMode = Model.ProducerId == 0 ? false : true;
    ViewData["Title"] = "Save";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-opacity-50 bg-success text-black">
                    <h4>@(editMode ? $"Editando la productora: {Model.ProducerName}" : "Creando nueva productora")</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Producer" asp-action="@(editMode ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="ProducerName" class="form-label">Nombre de la productora</label>
                            <input asp-for="ProducerName" type="text" class="form-control" placeholder="La caona..." />
                            <span asp-validation-for="ProducerName" class="text-danger"></span>
                        </div>
                        

                        <input type="hidden" asp-for="ProducerId" />

                        <button class="btn btn-primary" type="submit">Guardar</button>
                        <a class="btn btn-warning" asp-controller="Producer" asp-action="Index">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
